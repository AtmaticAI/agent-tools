{
  "name": "agent-tools",
  "version": "1.0.0",
  "private": true,
  "description": "Agent Tools is an agent-driven data utility platform that provides deterministic tools for transforming, formatting, and inspecting structured data.",
  "author": "atmatic.ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:AtmaticAI/agent-tools.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@agent-tools/web",
    "dev:mcp": "turbo dev --filter=@agent-tools/mcp-server",
    "build": "turbo build",
    "build:web": "turbo build --filter=@agent-tools/web",
    "build:mcp": "turbo build --filter=@agent-tools/mcp-server",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "screenshots": "tsx scripts/take-screenshots.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "playwright": "^1.58.1",
    "prettier": "^3.4.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@img/sharp-darwin-arm64": "^0.34.5"
  }
}
