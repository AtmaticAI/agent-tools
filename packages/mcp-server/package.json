{
  "name": "@agent-tools/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Agent Tools data transformation tools",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "agent-tools-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "start:stdio": "node dist/cli.js --transport stdio",
    "start:sse": "node dist/cli.js --transport sse",
    "start:http": "node dist/cli.js --transport http",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@agent-tools/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "express": "^4.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "pdf-lib": "^1.17.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agent-tools",
    "json",
    "csv",
    "pdf",
    "data-transformation"
  ]
}
